<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <p><label for="user_Name">Name</label></p>
          <p><%= f.text_field :name, autofocus: true, id:"user_Name", placeholder:"name"%></p>
        </div>
        <div class="form-group">
          <p><label for="inputImage">Image</label></p>
          <p><%= f.file_field :profile_image, placeholder: "profile_Image", accept: "image/*" %></p>
        </div>
        <div class="form-group">
          <p><label for="user_introduction">Introduction</label></p>
          <p><%= f.text_area :introduction, id:"user_introduction" %></p>
        </div>
        <%= f.submit "Update User", class:"btn btn-secondary" %>
    </div>
  </div>
</div>
<% end %>
