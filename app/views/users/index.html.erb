<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= render 'userinfo', user: @user %>
    <%= render 'newbook', books: @books, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Uses</h2>
      <table class="table tabel-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(100,100) %>
            </td>
            <td>
              <p><%= user.name %></p>
            </td>
            <td>
              <%= link_to user_path(user.id) do %>
                <p>Show</p>
              <% end %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
