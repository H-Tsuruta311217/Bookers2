<p id="notice"></p>
<!-- ユーザーの詳細 -->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
            <th>introduction</th>
            <th></th>
        </tbody>
      </table>
      <div class="row">
        <% if @user == current_user %>
        <%= link_to "プロフィール編集", edit_user_path(@user) , class: "btn btn-outline-secondary btn-block" %>
        <% end %>
      </div>
    <h2 class="mt-3">New book</h2>
    <form action="/books" accept-charset="UTF-8" method="post">
    <%= form_with model: @book do |f| %>
      <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
      </div>
      <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      </div>
    <% end %>
    </form>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table tabel-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
<!-- ユーザーの投稿一覧 -->
<%= render 'books/list', books: @books %>