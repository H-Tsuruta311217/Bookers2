<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', user: current_user %>
      <%= render 'newbook', books: @books, book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
            <%= image_tag @book.get_image %>
            <p><%= @book.user.name %></p>
            </td>
            <td>
              <p><%= @book.title %></p>
            </td>
            <td>
              <p><%= @book.body %></p>
            </td>
            <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
